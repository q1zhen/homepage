---
import { getCollection } from "astro:content";
import Base from "../../../layouts/Base.astro";
import dayjs from "dayjs";

export async function getStaticPaths() {
	const blogEntries = await getCollection("blog");
	return blogEntries.map((entry) => ({
		params: { slug: entry.id },
		props: { entry },
	}));
}

const { entry } = Astro.props;
const language_map = {
	en: { code: "en", name: "English" },
	sh: { code: "zh", name: "Shanghainese" },
	zh: { code: "zh", name: "Mandarin Chinese" },
}
---


<Base title={entry.data.title} description={entry.data.description} lang={language_map[entry.data.lang]?.code}>
	<div class="mt-2">
		<a href="/blog" target="_self">Â« Back to all web logs</a>
	</div>
	<h1 class="mt-4">{entry.data.title}</h1>
	<div class="mb-8 text-stone-400">
		<time>{dayjs(entry.data.date).format("D MMMM YYYY")}</time>
		&CenterDot;
		<a class="uppercase" href={"/blog/category/" + entry.data.category} target="_self">{entry.data.category}</a>
		&CenterDot;
		<span>{entry.data.description}</span>
		<br/>
		{entry.data.lang != "en" &&
			<>
				This is an article written in {language_map[entry.data.lang].name}. Common translation programs may not process it properly.
			</>
		}
	</div>
	<article set:html={entry.rendered.html} />
</Base>
